{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Install Ruff",
            "type": "debugpy",
            "request": "launch",
            "module": "uvpipx",
            "args": [
                "install",
                "ruff",
                "--expose",
                "_"
            ]
        },
        {
            "name": "Install jc",
            "type": "debugpy",
            "request": "launch",
            "module": "uvpipx",
            "args": [
                "install",
                "jc=1.24.0",
                // "--expose",
                // "_",
                // "-v"
            ]
        },
        {
            "name": "Upgrade jc",
            "type": "debugpy",
            "request": "launch",
            "module": "uvpipx",
            "args": [
                "upgrade",
                "jc", // ==1.24.0",
                // "--expose",
                // "_",
                // "-v"
            ]
        },
        {
            "name": "Uninstall jc",
            "type": "debugpy",
            "request": "launch",
            "module": "uvpipx",
            "args": [
                "uninstall",
                "jc"
            ]
        },
        {
            "name": "Uninstall gita",
            "type": "debugpy",
            "request": "launch",
            "module": "uvpipx",
            "args": [
                "uninstall",
                "gita"
            ]
        },
        {
            "name": "Ensurepath",
            "type": "debugpy",
            "request": "launch",
            "module": "uvpipx",
            "args": [
                "ensurepath"
            ]
        },
        {
            "name": "List",
            "type": "debugpy",
            "request": "launch",
            "module": "uvpipx",
            "args": [
                "list"
            ]
        },
        {
            "name": "Info",
            "type": "debugpy",
            "request": "launch",
            "module": "uvpipx",
            "args": [
                "info", "jc"
            ]
        },  
        {
            "name": "Venv JC",
            "type": "debugpy",
            "request": "launch",
            "module": "uvpipx",
            "args": [
                "venv", "jc", "--", "jc", "-h"
            ]
        },
        {
            "name": "Inject jc - icecream,loguru",
            "type": "debugpy",
            "request": "launch",
            "module": "uvpipx",
            "args": [
                "inject",
                "jc", 
                "icecream",
                "loguru"
            ]
        },        
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        }
    ]
}